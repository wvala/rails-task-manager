<h2><%= @task.title %></h2>
<h3>Completed? (<%= @task.completed %>)</h3>
<h4><%= @task.details %></h4>


<%= link_to 'Edit this task', edit_task_path(@task) %>
<%= link_to "Delete this task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to 'Back to tasks', tasks_path %>
